<div class="col-sm-6 col-sm-offset-3">
  <% if @stylists.empty? %>
    <p class="text-center lead">Sorry, there are no stylists at this time.</p>
  <% else %>
    <p class="text-center lead">Here is a list of available stylists:</p>
    <ul>
      <% @stylists.each do |stylist| %>
        <li>
          <a href="/stylists/<%= stylist.id %>">
            <%= stylist.full_name %>
          </a>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
